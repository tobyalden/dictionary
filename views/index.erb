<h2>List of words:</h2>

<ul>
  <% @words.each() do |word| %>
  <li> <a href="/word/<%= word.word %>" id=<%= word.word %>> <%= word.word %> </a> </li>
  <% end %>
</ul>

<form action='/add_word' method='post'>
  <div class='form-group'>
    <label for='new_word'>Add new word:</label>
    <input id='new_word' name='new_word' class='form-control' type='text'>
  </div>
  <button id="add_word" class='btn-success'>Add</button>
</form>
